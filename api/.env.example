# API service configuration
PORT=3000
NODE_ENV=development

# Service-to-service auth (must match ai-service)
INTERNAL_API_KEY=

# Python AI service base URL
AI_SERVICE_URL=http://localhost:8000

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Redis (optional; defaults to redis://localhost:6379)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Pinecone (required if using documents/vector search)
PINECONE_API_KEY=
PINECONE_INDEX_NAME=stevie-kb-documents

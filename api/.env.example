# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-key
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# OpenAI Request Queue (Phase 1 Scalability)
OPENAI_QUEUE_CONCURRENCY=10
OPENAI_QUEUE_RATE_LIMIT=50

# Internal API Key (for admin endpoints)
INTERNAL_API_KEY=your-secure-random-key

# Pinecone Configuration (Vector Database)
PINECONE_API_KEY=your-pinecone-key
PINECONE_INDEX_NAME=stevie-kb-documents
PINECONE_ENVIRONMENT=us-east-1

# Redis Configuration (Caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# AWS S3 Configuration (File Storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=your-bucket-name

# Award Search Assistant Configuration
# Cache TTL in days (default: 7 days)
AWARD_SEARCH_CACHE_TTL_DAYS=7
# Maximum queue depth for concurrent search requests (default: 50)
AWARD_SEARCH_MAX_QUEUE_DEPTH=50
# Crawler concurrency limit (max concurrent requests to stevieawards.com, default: 3)
AWARD_SEARCH_CRAWLER_CONCURRENCY=3
# Crawler delay between requests in milliseconds (default: 1000ms = 1 second)
AWARD_SEARCH_CRAWLER_DELAY_MS=1000
# Crawler max depth for following links (default: 2)
AWARD_SEARCH_CRAWLER_MAX_DEPTH=2
# Crawler max retries for failed requests (default: 3)
AWARD_SEARCH_CRAWLER_MAX_RETRIES=3
# Crawler exponential backoff base in seconds (default: 2)
AWARD_SEARCH_CRAWLER_BACKOFF_BASE=2

# CORS Configuration (Frontend URLs)
CORS_ORIGINS=https://your-frontend.com,http://localhost:3000
ALLOWED_ORIGINS=https://your-frontend.com,http://localhost:3000

# Node Environment
NODE_ENV=development
PORT=3000
